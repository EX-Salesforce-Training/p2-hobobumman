<aura:component>
    <!--Handlers for the flows-->
    <aura:handler name="init" value="{!this}" action="{!c.LimitsFlow}" />
    <aura:handler name="init" value="{!this}" action="{!c.DerivativeFlow}" />
    <aura:handler name="init" value="{!this}" action="{!c.IntegralFlow}" />

    <lightning:accordion aura:id = "CaculusSections" >
        <!--Limits Accordion-->
                <lightning:accordionSection name = "Limits" label = "Limits and Continuity">
                    Limits and Continuity
                    <!--Flow Limits here-->
                    <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <article class="slds-card">
                              <header class="slds-media slds-media_center ">
                                <div class="slds-media__body">
                                  <h2 class="slds-card__header-title">
                                    <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                                      <span>Quiz</span>
                                    </a>
                                  </h2>
                                </div>
                              </header>
                            <div class="slds-card__body"><lightning:flow aura:id="FlowLimitsandContinuity"  class="slds-align_absolute-center" /></div>
                        </article>
                    </div></div></div></div></div></div></div></div></div> 
                    
                </lightning:accordionSection>
                <lightning:accordionSection name = "Derivative" label = "The Derivative">
                    The derivative
                    <!--Flow Derivative here-->
                    <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <article class="slds-card">
                              <header class="slds-media slds-media_center ">
                                <div class="slds-media__body">
                                  <h2 class="slds-card__header-title">
                                    <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                                      <span>Quiz</span>
                                    </a>
                                  </h2>
                                </div>
                              </header>
                            <div class="slds-card__body"><lightning:flow aura:id="FlowDerivative"  class="slds-align_absolute-center" /></div>
                        </article>
                    </div></div></div></div></div></div></div></div></div> 
                    
                </lightning:accordionSection>
                <lightning:accordionSection name = "Integral" label = "The Integral">
                    The integral 
                    <!--Flow Integral here-->
                    <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large"><div class="slds-m-horizontal_xx-large">
                        <article class="slds-card">
                              <header class="slds-media slds-media_center ">
                                <div class="slds-media__body">
                                  <h2 class="slds-card__header-title">
                                    <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                                      <span>Quiz</span>
                                    </a>
                                  </h2>
                                </div>
                              </header>
                            <div class="slds-card__body"><lightning:flow aura:id="FlowIntegral"  class="slds-align_absolute-center" /></div>
                        </article>
                    </div></div></div></div></div></div></div></div></div> 
                    
                </lightning:accordionSection>
    </lightning:accordion>
</aura:component>